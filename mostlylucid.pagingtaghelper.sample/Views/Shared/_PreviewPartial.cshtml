@model PreviewPartialViewModel

<div class="w-full mx-auto mb-4 p-6 border rounded-md shadow-lg hover:outline-double transition bg-white dark:bg-base-200 dark:text-white border-gray-200 dark:border-gray-600">

    <!-- Row: Home + Description -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-4">
        <a asp-action="Index" asp-controller="Home"
           class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">
            <i class="bx bx-home text-lg"></i>
            <span>Home</span>
        </a>
        <p class="text-sm text-gray-700 dark:text-gray-300 mb-0">@Model.Description</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.SourceLink))
    {


        <div class="collapse collapse-arrow bg-base-800 dark:bg-base-200 border border-gray-200 dark:border-gray-600 text-black dark:text-white rounded-box shadow">
            <input type="checkbox" class="peer"/>
            <div class="collapse-title font-medium cursor-pointer">
                Click to Show Source
            </div>

            <div class="collapse-content bg-base-800 dark:bg-base-100 text-sm text-gray-800 dark:text-gray-200 peer-checked:block hidden">
                <div id="panel-details-1"
                     hx-get="@Url.Action("ShowSource", "SourceLink", new { sourceLink = Model.SourceLink })"
                     hx-trigger="click from:closest .collapse once"
                     hx-target="#panel-details-1"
                     hx-swap="innerHTML">
                    <div class="italic text-gray-400">Loading...</div>
                </div>
            </div>
        </div>
    }
</div>