@model List<CardSectionModel>

@{
    ViewData["Title"] = "Sample Suite - Home";
}

<div class="container mx-auto p-6 dark:bg-base-200 bg-base-700 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-primary mb-4">Sample Suite for mostlylucid paging taghelper</h1>
    <p class="mb-6 dark:text-base-content text-base-700">Explore various examples demonstrating the functionality of the Paging Tag Helper.</p>

    <div class="mb-6">
        <p class="text-base-content">I'm writing a number of blog posts on this here:</p>
        <a class="btn btn-warning mt-2"
           href="https://www.mostlylucid.net/blog/category/PagingTagHelper">
            See Articles
        </a>
    </div>

    @foreach (var cardSection in Model)
    {
        <section class="mb-10 p-6 dark:bg-base-100 bg:base-600 rounded-xl shadow-md">
            <h2 class="text-2xl font-semibold text-primary mb-4">@cardSection.Title</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var card in cardSection.Cards)
                {
                    <partial name="_CardPartial" model="card"/>
                }
            </div>
        </section>
    }
</div>