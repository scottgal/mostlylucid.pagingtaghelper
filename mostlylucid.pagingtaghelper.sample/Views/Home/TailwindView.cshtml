@model PagingViewModel
@{
    Layout = "_LayoutTailwind";
    ViewData["Title"] = "Pure Tailwind View";
    var previewModel = new PreviewPartialViewModel();
    previewModel.Description = "This example demonstrates the pure Tailwind CSS view type without DaisyUI components. It uses only Tailwind utility classes for styling, making it framework-independent.";
    previewModel.SourceLink="/Views/Home/TailwindView.cshtml";
}

<partial name="_PreviewPartial" model="previewModel"/>

<paging model="Model"
        view-type="Tailwind"
        class="my-4">
</paging>

<partial name="_ResultsList" model="Model"/>

@Html.PageSizeOnchangeSnippet()
