@model PagingViewModel
@{
    ViewData["Title"] = "Pure Tailwind View";
    var previewModel = new PreviewPartialViewModel();
    previewModel.Description = "This example demonstrates the pure Tailwind view without DaisyUI dependencies. Uses only Tailwind utility classes for styling with full HTMX support.";
    previewModel.SourceLink="/Views/Home/TailwindView.cshtml";
}

<partial name="_PreviewPartial" model="previewModel"/>

<div id="paging-container">
    <paging model="Model"
            class="my-4"
            hx-target="#paging-container"
            hx-swap="outerHTML">
    </paging>

    <partial name="_ResultsList" model="Model"/>
</div>
